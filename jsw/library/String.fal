export

class String

	/**
	 * Uppercase the first letter of the first word.
	 *
	 * @static
	 * @param 	string str - The string whose first to upper case.
	 * @return 	string
	 */
	function firstUpper(str)
		if str == nil : return ''
		str[0:1] = strUpper(str[0:1])
		return str
	end	
end

